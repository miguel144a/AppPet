<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_contacto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:padding="5dp"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_foto_mascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/dog_haski_icon"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:rowCount="1"
            android:numColumns="4">

            <ImageView
                android:id="@+id/iv_hueso_bla"
                android:layout_width="@dimen/ancho_celada1"
                android:layout_height="wrap_content"
                android:src="@drawable/hueso"
                android:layout_row="0"
                android:layout_column="0"
                />

            <TextView
                android:id="@+id/tv_nombre"
                android:layout_width="@dimen/ancho_celada2"
                android:layout_height="wrap_content"
                android:text="@string/nombre_mascota"
                android:textSize="@dimen/texto_size"
                android:layout_gravity="center"
                android:layout_row="0"
                android:layout_column="1"/>

            <TextView
                android:id="@+id/tv_like"
                android:layout_width="@dimen/ancho_celada3"
                android:layout_height="wrap_content"
                android:text="@string/num_likes"
                android:textSize="@dimen/texto_size"
                android:layout_gravity="center"
                android:layout_row="0"
                android:layout_column="2"
                android:textAlignment="3"
                />

            <ImageView
                android:id="@+id/iv_hueso_dor"
                android:layout_width="@dimen/ancho_celada4"
                android:layout_height="wrap_content"
                android:src="@drawable/hueso_dorado"
                android:layout_row="0"
                android:layout_column="3"
                />

        </GridLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>