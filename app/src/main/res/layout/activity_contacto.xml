<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.ContactoActivity">

    <TextView
        android:id="@+id/tv_nombre_contacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_nombre_contacto"/>

    <EditText
        android:id="@+id/et_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_nombre_contacto"/>

    <TextView
        android:id="@+id/tv_email_contacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_email_contacto"
        android:layout_below="@id/et_nombre"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_email_contacto"/>

    <TextView
        android:id="@+id/tv_comentario_contacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_comentario_contacto"
        android:layout_below="@+id/et_email"/>

    <EditText
        android:id="@+id/et_comentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_comentario_contacto"
        />

    <Button
        android:id="@+id/btn_envia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_enviar"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_comentario"/>

</RelativeLayout>
